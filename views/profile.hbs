<div class = "overlay"></div>
{{>navbar}}
<div class="main__container">
    {{>sidebar}}
    {{> (partial) }}
</div>
<div class = "delete__container">
    <h1 class="delete__title">
        Are you sure you want to delete this post?<br><br>
        <span>Keep in mind that all comments associated with this post will also be deleted.</span>
    </h1>
    <div class = "deleteBtn__container">
        <button id = "yesBtn">YES</button>
        <button id = "noBtn">NO</button>
    </div>
</div>
<div class = "editPost__container">
    <a class = "exit__btn"><i class="fas fa-times"></i></a>
    <div class="header__container">
        <h1>Edit post</h1>
        <button id = "edit__btn">Save post</button>
    </div>
    <form action="" class="edit__form">
        <label for = "edit__title">Title</label>
        <input id = "edit__title">
        <label for = "edit__tags">Tags</label>
        <input id = "edit__tags">
        <label for = "edit__city">City</label>
        <input id = "edit__city">
        <label for = "edit__cuisine">Cuisine</label = "edit__description">
        <input id = "edit__cuisine">
        <label for = "edit__description">Description</label>
        <textarea id = "edit__description"></textarea>
    </form>
    <form id = "" class="box" method="POST" action="/uploads/img" enctype="multipart/form-data">
        <div class="box__input">
            <h1>Image for the post</h1>
            <div class="file__container">
                <label id = "browse" for = "file">Browse file</label>
                <span id = "selected__file"> No file selected </span>
                <input id="file" class="box__file" type="file" name = "postImg" />
            </div>
        </div>
    </form>
</div>