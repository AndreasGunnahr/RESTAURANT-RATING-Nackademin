{{>navbar}}
<div class="main__post">
    <img src = "/uploads/{{clickedPost.img}}">
    <h1 class="title">{{clickedPost.title}}</h1>
    <div class="tag__container">
        {{#each clickedPost.tags}}
            <span class="tag">{{this}}</span>
        {{/each}}
    </div>
     <div class="star__container">
        <a class="fas fa-star s1"></a>
        <a class="fas fa-star s2"></a>
        <a class="fas fa-star s3"></a>
        <a class="fas fa-star s4"></a>
        <a class="fas fa-star s5"></a>
        <h1>62% recommended</h1>
    </div>
    <h1 class="description">Description</h1>
    <span>{{clickedPost.description}}</span>
    <div class="comment__container">
        <h1 class = "h1__header">Comments</h1>
        <div class = "showComment__container">
            {{#each comments}}
                <div class = "comment">
                    <div class = "header">
                        <img src = "/images/profile.jpg">
                        <h1>{{this.username}}</h1>
                        <span>{{this.date}}</span>
                    </div>
                    <p>{{this.comment}}</p>
                </div>
            {{/each}}
        </div>
        <div class="post__container">
            {{#if isAuthenticated}}
                <input id = "comment-input" placeholder = "Type here to post your comment">
                <button id = "comment-btn">Post comment</button>
            {{else}}
                <a href = "/login" type = "button">Sign in to post comment</a>
            {{/if}}
        </div>
    </div>
</div>